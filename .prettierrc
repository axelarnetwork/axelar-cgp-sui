{
    "printWidth": 140,
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": false,
    "bracketSpacing": true,
    "overrides": [
        {
            "files": "*.js",
            "options": {
                "trailingComma": "all"
            }
        },
        {
            "files": "*.ts",
            "options": {
                "trailingComma": "all"
            }
        },
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2,
                "parser": "json-stringify"
            }
        },
        {
            "files": "*.yaml",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
